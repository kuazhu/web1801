.article-item{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ddd;
  margin: 10px 0;
}
.article-head{
  height: 60px;
  line-height: 60px;
}
.article-head-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10px;
  vertical-align: middle;
}
.article-head-text{
  margin-left: 10px;
  font-size: 28rpx;
  color: #333;
  vertical-align: middle;
}
.article-title{
  margin-left: 10px;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.article-img{
  width: 100%;
  height: 480rpx;
}
.article-description{
  line-height: 60rpx;
  letter-spacing: 2px;
  padding: 10px;
  color: #666;
}
.article-footer{
  padding-bottom: 20px;
}
.article-footer-img{
  width: 36rpx;
  height: 36rpx;
  margin-left: 10px;
  vertical-align: middle;
}
.article-footer-text{
  margin-left: 5px;
  color: #aaa;
  vertical-align: middle;
}